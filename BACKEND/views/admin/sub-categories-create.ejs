<% var category_slug %> 
<!DOCTYPE html>
<html lang="en">
  <head>
    <!-- Header -->
    <%- include('../partials/header') %>
  </head>

  <body>
    <div id="app">
      <!-- Sidebar -->
      <%- include('../partials/sidebar') %>

      <div id="main">
        <header class="mb-3">
          <a href="#" class="burger-btn d-block d-xl-none">
            <i class="bi bi-justify fs-3"></i>
          </a>
        </header>

        <div class="page-heading">
          <div class="page-title">
            <div class="row">
              <div class="col-12 col-md-6 order-md-1 order-last">
                <h3>Sub Categories Create</h3>
              </div>
              <div class="col-12 col-md-6 order-md-2 order-first">
                <nav
                  aria-label="breadcrumb"
                  class="breadcrumb-header float-start float-lg-end"
                >
                  <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                      <a href="/admin">Dashboard</a>
                    </li>
                    <li class="breadcrumb-item active" aria-current="page">
                      <a href="/admin/categories">Categories</a>
                    </li>
                    <li class="breadcrumb-item active" aria-current="page">
                      <a href="/admin/categories/<%= category_slug %>">Sub Categories</a>
                    </li>
                    <li class="breadcrumb-item active" aria-current="page">
                      Sub Category Create
                    </li>
                  </ol>
                </nav>
              </div>
            </div>
          </div>

        <div class="page-content">
          <section class="row">
            <div class="row match-height">
              <div class="col-md-6 col-12">
                <div class="card">
                  <div class="card-header">
                    <h4 class="card-title">Sub Categoriya yaratish</h4>
                  </div>
                  <div class="card-content">
                    <div class="card-body">
                      <form class="form form-vertical" method="post" action="/admin/sub-categories/create" enctype="multipart/form-data">
                        <div class="form-body">
                          <div class="row">
                            <div class="col-12">
                              <div class="form-group">
                                <label for="first-name-vertical">uz Nomi</label>
                                <input
                                  type="text"
                                  id="first-name-vertical"
                                  class="form-control"
                                  name="uz_name"
                                  placeholder="Nomi"
                                />
                              </div>
                            </div>

                            <div class="col-12">
                              <div class="form-group">
                                <label for="first-name-vertical">ru Nomi</label>
                                <input
                                  type="text"
                                  id="first-name-vertical"
                                  class="form-control"
                                  name="ru_name"
                                  placeholder="Nomi"
                                />
                              </div>
                            </div>

                            <div class="col-12">
                              <div class="form-group">
                                <label for="first-name-vertical"
                                  >en Nomi</label
                                >
                                <input
                                  type="text"
                                  id="first-name-vertical"
                                  class="form-control"
                                  name="en_name"
                                  placeholder="Nomi"
                                />
                              </div>
                            </div>

                            <div class="mb-3">
                              <label class="form-label"
                                >Kategoriya ikoni</label
                              >
                              <input
                                class="form-control"
                                type="file"
                                id="formFileMultiple"
                                multiple=""
                                name="img"
                              />
                            </div>

                            <div class="col-12 d-flex justify-content-end">
                              <button
                                type="submit"
                                class="btn btn-primary me-1 mb-1"
                              >
                                Submit
                              </button>
                              <button
                                type="reset"
                                class="btn btn-light-secondary me-1 mb-1"
                              >
                                Reset
                              </button>
                            </div>
                          </div>
                        </div>
                      </form>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </section>
        </div>
      </div>
    </div>

    <!-- Footer -->
    <%- include('../partials/footer') %>
  </body>
</html>
